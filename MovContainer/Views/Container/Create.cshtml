@model MovContainer.Models.Container


<h1>Cadastro de Container</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" placeholder="Ex: ABCD1234567" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSelecionado" class="control-label"></label>
                <select asp-for="TipoSelecionado" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Tipo>()">
                <option>Selecione o tipo</option>
                </select>
                <span asp-validation-for="TipoSelecionado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusSelecionado" class="control-label"></label>
                <select asp-for="StatusSelecionado" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Status>()">
                    <option>Selecione o status</option>
                </select>
                <span asp-validation-for="StatusSelecionado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaSelcionada" class="control-label"></label>
                <select asp-for="CategoriaSelcionada" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Categoria>()">
                    <option>Selecione a categoria</option>
                </select>
                <span asp-validation-for="CategoriaSelcionada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Empresa" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option>Selecione a empresa</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
